<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">


    <ImageView
        android:id="@+id/iv_item_detail_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/img_item_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_item_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/course_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_detail_photo"
        app:layout_constraintStart_toStartOf="@+id/iv_item_detail_photo"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_detail_photo" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/overview"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_detail_name"
        app:layout_constraintStart_toStartOf="@+id/tv_item_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_detail_name" />

    <TextView
        android:id="@+id/tv_item_detail_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/course_desc"
        app:layout_constraintEnd_toEndOf="@+id/tv_overview"
        app:layout_constraintStart_toStartOf="@+id/tv_overview"
        app:layout_constraintTop_toBottomOf="@+id/tv_overview" />

    <TextView
        android:id="@+id/tv_syllabus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/syllabus"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_detail_desc"
        app:layout_constraintStart_toStartOf="@+id/tv_item_detail_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_detail_desc" />

    <TextView
        android:id="@+id/tv_syllabus_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_syllabus"
        app:layout_constraintStart_toStartOf="@+id/tv_syllabus"
        app:layout_constraintTop_toBottomOf="@+id/tv_syllabus"
        tools:text="@string/syllabus_content" />

    <Button
        android:id="@+id/btn_enroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/enroll_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_syllabus_content"
        app:layout_constraintStart_toStartOf="@+id/tv_syllabus_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_syllabus_content"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
